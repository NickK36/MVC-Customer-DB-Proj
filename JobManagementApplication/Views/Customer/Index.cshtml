@model IList<Customer>
@{
    ViewData["Title"] = "Index";
}

<h2 class="title">All Customers</h2>

<table class="table table-striped table-hover">
    <thead class="table-head">
        <tr>
            <th colspan="2" id="table-name">Name</th>
            <th id="table-address">Address</th>
            <th id="table-city">City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Customer customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td id="customer-detail-link"><a asp-controller="Customer" asp-action="Detail" asp-route-id="@customer.ID">More Details</a></td>
            </tr>
        }
    </tbody>
</table>

